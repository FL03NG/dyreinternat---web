@page
@model dyreinternat___web.Pages.MemberGridModel
@{
}
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medlemshåndtering</title>
    <style>
        :root {
            --primary-blue: #2563eb;
            --light-blue: #3b82f6;
            --dark-blue: #1e40af;
            --background: #f8fafc;
            --card-bg: #ffffff;
            --text-dark: #1e293b;
            --text-medium: #475569;
            --text-light: #64748b;
            --border: #e2e8f0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        body {
            background-color: var(--background);
            color: var(--text-dark);
            line-height: 1.6;
            padding: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Form styling */
        .form-section {
            background-color: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            border: 1px solid var(--border);
        }

        .form-title {
            color: var(--dark-blue);
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .input-group {
            margin-bottom: 0.5rem;
        }

            .input-group label {
                display: block;
                margin-bottom: 0.5rem;
                color: var(--text-medium);
                font-size: 0.9rem;
                font-weight: 500;
            }

            .input-group input {
                width: 100%;
                padding: 0.75rem 1rem;
                border: 1px solid var(--border);
                border-radius: 8px;
                font-size: 1rem;
                transition: all 0.2s ease;
            }

                .input-group input:focus {
                    outline: none;
                    border-color: var(--light-blue);
                    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
                }

        .submit-btn {
            background-color: var(--primary-blue);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 1rem;
            grid-column: 1 / -1;
            justify-self: start;
        }

            .submit-btn:hover {
                background-color: var(--dark-blue);
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
            }

        /* Members list styling */
        .members-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-title {
            color: var(--dark-blue);
            font-size: 1.5rem;
            font-weight: 600;
        }

        .members-count {
            background-color: var(--light-blue);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 999px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .members-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .card {
            background-color: var(--card-bg);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            border: 1px solid var(--border);
            transition: all 0.2s ease;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
                border-color: var(--light-blue);
            }

        .card__bg {
            background: linear-gradient(135deg, var(--light-blue) 0%, var(--dark-blue) 100%);
            height: 4px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--text-dark);
        }

        .card-detail {
            display: flex;
            margin-bottom: 0.75rem;
        }

        .detail-label {
            color: var(--text-medium);
            font-weight: 500;
            width: 80px;
            flex-shrink: 0;
        }

        .detail-value {
            color: var(--text-dark);
        }

        

        {
            padding: 1rem;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Form section -->
        <section class="form-section">
            <h2 class="form-title">Tilføj nyt medlem</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-grid">
                    <div class="input-group">
                        <label for="NewAccount_AccountID">ID</label>
                        <input type="number" asp-for="NewAccount.AccountID" placeholder="Indtast ID" />
                    </div>
                    <div class="input-group">
                        <label for="NewAccount_Name">Navn</label>
                        <input type="text" asp-for="NewAccount.Name" placeholder="Indtast fulde navn" />
                    </div>
                    <div class="input-group">
                        <label for="NewAccount_Email">Email</label>
                        <input type="text" asp-for="NewAccount.Email" placeholder="Indtast email" />
                    </div>
                    <div class="input-group">
                        <label for="NewAccount_Tlf">Telefon</label>
                        <input type="text" asp-for="NewAccount.Tlf" placeholder="Indtast telefonnummer" />
                    </div>
                </div>
                <button type="submit" class="submit-btn">Gem medlem</button>
            </form>
        </section>

        <!-- Members list section -->
        <section>
            <div class="members-header">
                <h2 class="section-title">Medlemmer</h2>
                <span class="members-count">@Model.AccountGrid.Count medlemmer</span>
            </div>

            <div class="members-grid">
                @foreach (var account in Model.AccountGrid)
                {
                    <div class="card">
                        <div class="card__bg"></div>
                        <div class="card-body">
                            <h3 class="card-title">@account.Name</h3>
                            <div class="card-detail">
                                <span class="detail-label">ID:</span>
                                <span class="detail-value">@account.AccountID</span>
                            </div>
                            <div class="card-detail">
                                <span class="detail-label">Email:</span>
                                <span class="detail-value">@account.Email</span>
                            </div>
                            <div class="card-detail">
                                <span class="detail-label">Telefon:</span>
                                <span class="detail-value">@account.Tlf</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</body>
</html>